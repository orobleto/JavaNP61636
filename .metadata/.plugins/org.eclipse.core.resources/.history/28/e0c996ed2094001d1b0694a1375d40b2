
public class VariablesConstantes {
	public static void main(String[] args) {

		// declare la variable goles
		byte goles = 4;
		System.out.println(goles);

		goles = 8;
		System.out.println(goles);

		byte faltas = 12;
		System.out.println(faltas);

		short edad;

		int entero1 = 1;
		int entero2 = 159;
		int enetro3 = 11111;

		long lon1, long2;

		long serial = 1L;

		float sueldo = 1.5f;
		double aguinaldo = 1.5;
		
		//double total = sueldo + aguinaldo;
		
		boolean activo = true; // va tru o va false

		char letra = '0';

		String cadena = "el curso de java no programadores";
		
		cadena = "octavio robleto";
		
		final String VERSION = "Version Original 1.0";
		
		final float PI = 3.1416F;
		
		System.out.println(cadena);
		
		cadena  = "octavio \" \r robleto\tArgentina\\";
		
		System.out.println(cadena);
		
	}
}
